<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MOBWEB_TEST.Screens.HomeScreen"
             Title="HomeScreen">
    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
        <Label 
            Text="Forest Cruiser Homepage"
            VerticalOptions="Center" 
            FontSize="50"
            HorizontalOptions="Center" />

        <Button
            x:Name="SubmitData"
            Text="Submit Data To Server" 
            SemanticProperties.Hint="Uploads Data to Associated FRASS Account"
            Clicked="OnSubmitClicked"
            HorizontalOptions="Fill" />
        <Button
            x:Name="LogOut"
            Text="Return to Log In Screen" 
            SemanticProperties.Hint="You will have to reenter your account information"
            Clicked="OnLogoutClicked"
            HorizontalOptions="Fill" />
        <Button
            x:Name="DataEntry"
            Text="Begin Cruise" 
            SemanticProperties.Hint="Add new data to your account"
            Clicked="OnDataEntryClicked"
            HorizontalOptions="Fill" />
        <Button
            x:Name="ViewProfile"
            Text="View Profile"
            SemanticProperties.Hint ="View Profile Data"
            Clicked="OnProfileClicked"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>